{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noLib": false,
    "outDir": "./dist",
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "./schema/fro.graphql",
        "tag": "gql"
      }
    ],
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "es2019"
    ],
    "types": [
      "node",
      "mocha"
    ],
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "tests",
    "dist"
  ],
  "include": [
    "src",
    "src/**/schema.json"
  ],
  "references": [
    {
      "path": "../chain-auth"
    }
  ]
}