#!/bin/sh

display_help() {
  echo "Usage: $0 --network-folder [network folder]" >&2
  echo
  echo "   -n, --network-folder        Network folder to use"
  echo
  exit 1
}

################################
# Check if parameters options  #
# are given on the commandline #
################################
while :; do
  case "$1" in
  -h | --help)
    display_help # Call your function
    exit 0
    ;;
  -n | --network-folder)
    network_folder="$2"
    shift 2
    ;;

  --) # End of all options
    shift
    break
    ;;
  -*)
    echo "Error: Unknown option: $1" >&2
    display_help
    exit 1
    ;;
  *) # No more options
    break
    ;;
  esac
done

PRJT_ROOT="$( cd "$(dirname "$0")" >/dev/null 2>&1 || exit 1 ; pwd -P | grep -o '^.*/' )"
LOG_FILE="$PRJT_ROOT/logs/iter-eth.log"
ERROR_FILE="$PRJT_ROOT/logs/iter-eth.err"

NETWORK_FOLDER_DEFAULT="${PRJT_ROOT}networks/local"
NETWORK_FOLDER=$(realpath "${network_folder:-$NETWORK_FOLDER_DEFAULT}")

SC=${PRJT_ROOT}"packages/cast/cast-eth-v1"
BA_PRO=${PRJT_ROOT}"packages/cast/cast-interface-v1"


if ! lerna run --stream --no-prefix --scope @castframework/cast-eth-v1 init -- -- --network-folder "$NETWORK_FOLDER" 1> $LOG_FILE 2> $ERROR_FILE
then
    echo "ðŸ’¥ Error during init"
    exit 1
fi

echo "ðŸ›  Exporting abi to cast-interface-v1"

cd "$PRJT_ROOT" || exit 1


if cp -rf "${SC}"/dist/abi/* "${BA_PRO}"/src/blockchainSpecific/eth/abi 1> $LOG_FILE 2> $ERROR_FILE
then
    echo "âœ… Abi exported to cast-interface-v1"
else
    echo "ðŸ’¥ Error during api export to cast-interface-v1"
    exit 1
fi

## Build blockchain abstract

echo "ðŸ›  Rebuilding cast-interface-v1"

cd "$PRJT_ROOT" || exit 1

if $(npm bin)/nx run cast-interface-v1:build 1> $LOG_FILE 2> $ERROR_FILE
then
    echo "âœ… Built cast-interface-v1"
else
    echo "ðŸ’¥ Error cast-interface-v1 build"
    exit 1
fi

echo "ðŸŽŠ All done !"
